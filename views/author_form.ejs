<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header') -%>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include('partials/sidebar') -%>
            </div>
            <div class="col-sm-10">
                <h1>
                    <%= title %>
                </h1>
                <form method="POST" action="">
                    <div class="form-group">
                        <label for="first_name">
                            First Name:
                        </label>
                        <input 
                            id="first_name"
                            class="form-control"
                            type="text"
                            placeholder="First name"
                            name="first_name"
                            required="true"
                            value="<%= author ? author.first_name : '' %>"
                        />
                        <label for="family_name">
                            Family Name:
                        </label>
                        <input 
                            id="family_name"
                            class="form-control"
                            type="text"
                            placeholder="Family name"
                            name="family_name"
                            required="true"
                            value="<%= author ? author.family_name : '' %>"
                        />
                        <label for="date_of_birth">
                            Date of birth:
                        </label>
                        <input 
                            id="date_of_birth"
                            class="form-control"
                            type="date"
                            name="date_of_birth"
                            value="<%= author ? author.date_of_birth : '' %>"
                        />
                        <label for="date_of_death">
                            Date of death:
                        </label>
                        <input 
                            id="date_of_death"
                            class="form-control"
                            type="date"
                            name="date_of_death"
                            value="<%= author ? author.date_of_death : '' %>"
                        />
                        <button
                            class="btn btn-primary"
                            type="submit"
                        >
                            Submit 
                        </button>
                    </div>
                    <% if (errors) { %>
                        <ul>
                            <% errors.forEach(error => { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                            <% }) %>
                        </ul>
                    <% } %>
                </form>
            </div>
        </div>
    </div>
</body>
</html>