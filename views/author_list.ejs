<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header') -%>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include('partials/sidebar') -%>
            </div>
            <div class="col-sm-10">
                <h1><%= title %></h1>
                <ul>
                    <% if (author_list.length > 0) { %>
                        <%= console.log(author_list[1]) %>
                        <% author_list.forEach(author => { %>
                            <li>
                                <a href=<%= author.url %>>
                                    <%= author.name %>
                                </a>
                                (<%= author.lifespan %>)
                            </li>
                        <% }) %>
                    <% } else { %>
                        <li>There are no authors.</li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>