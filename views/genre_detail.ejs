<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header') -%>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include('partials/sidebar') -%>
            </div>
            <div class="col-sm-10">
                <h1> Genre: <%= genre.name %></h1>
                <div style="margin-left:20px;margin-top:20px">
                    <h4>Books</h4>
                    <dl>
                        <% if (genre_books.length > 1) { %>
                        <% genre_books.forEach(book => { %>
                            <dt>
                                <a href=<%= book.url %>>
                                    <%= book.title %>
                                </a>
                            </dt>
                            <dd><%= book.summary %></dd>
                        <% }) %>
                        <% } else { %>
                            This genre has no books.
                        <% } %>
                    </dl>
                </div>
                <hr>
                <p>
                    <a href=<%= genre.url + '/delete' %>>
                        Delete genre
                    </a>
                </p>
                <p>
                    <a href=<%= genre.url + '/update' %>>
                        Update genre
                    </a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>